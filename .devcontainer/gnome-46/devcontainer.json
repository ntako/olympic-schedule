{
    "name": "GNOME 46",
    "build": {
        "dockerfile": "../Dockerfile",
        "args": {
            "FEDORA_VERSION": "40"
        }
    },
    "runArgs": [
        "--network=host",
        "--privileged",
        "--device=/dev/input",
        "--device=/dev/uinput",
        "--device=/dev/dri",
        "--volume=/run/udev:/run/udev:ro",
        "--cap-add=SYS_ADMIN",
        "--cap-add=SYS_RAWIO",
        "--cap-add=SYS_PTRACE",
        "--security-opt=seccomp=unconfined",
        "--security-opt=apparmor:unconfined",
        "--tmpfs", "/run",
        "--tmpfs", "/tmp"
    ],
    "features": {
        "ghcr.io/devcontainers/features/common-utils": {
            "installZsh": "true",
            "username": "vscode",
            "userUid": "1000",
            "userGid": "1000",
            "upgradePackages": "true"
        }
    },
    "mounts": [
        {
            "type": "bind",
            "source": "/tmp/.X11-unix",
            "target": "/tmp/.X11-unix"
        },
        {
            "type": "bind",
            "source": "/run/dbus/system_bus_socket",
            "target": "/run/dbus/system_bus_socket"
        },
        {
            "type": "bind",
            "source": "/run/user/1000/bus",
            "target": "/run/user/1000/bus"
        }
    ],
    "remoteUser": "vscode",
    "remoteEnv": {
        "DISPLAY": "${localEnv:DISPLAY}",
        "XDG_RUNTIME_DIR": "${localEnv:XDG_RUNTIME_DIR}",
        "XAUTHORITY": "${localEnv:XAUTHORITY}"
    },
	"customizations": {
		"vscode": {
			"extensions": [
				"carlos-algms.make-task-provider"
			]
		}
	}

    ,"postCreateCommand": "sudo chown -R 1000:1000 \"$XDG_RUNTIME_DIR\" || true"
}